@model DevFolio.Models.TblAdmin
@{
    ViewBag.Title = "UpdateAdmin";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Kullanıcı Güncelleme</h2>

<form method="post">
    
    <label>ID</label>
    <input type="text" class="form-control" name="AdminID" value="@Model.AdminID" readonly/>

    <label>Kullanıcı Adı </label>
    <input type="text" class="form-control" name="Username" value ="@Model.Username"/>

    <label>Şifre</label>
    <input type="text" class="form-control" name="Password" maxlength="20" value ="@Model.Password"></input>
    <br />
    <button class="btn btn-info">Kullanıcıyı Güncelle</button>
</form>
