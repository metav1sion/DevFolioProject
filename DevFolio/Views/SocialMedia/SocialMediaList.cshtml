@model List<DevFolio.Models.TblSocialMedia>

@{
    ViewBag.Title = "SocialMediaList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Sosyal Medya Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Başlık</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    <!--Razor Syntax-->
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.SocaialMediaID</td>
                    <td>@item.PlatformName</td>
                    <td>@item.Status</td>
                    <td><a href="#" class="btn btn-danger">Sil</a></td>
                    <td><a href="#" class="btn btn-success">Güncelle</a></td>
                </tr>
            }
</table>
<td><a href="#" class="btn btn-info">Yeni Sosyal Medya Girişi</a></td>
