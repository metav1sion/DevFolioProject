@using DevFolio.Models
@model List<DevFolio.Models.TblProject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Projeler Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Proje Başlığı</th>
        <th>Kategori</th>
        <th>Githubda Aç</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
 @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProjectID</td>
            <td>@item.ProjectTitle</td>
            <td>@item.TblCategory.CategoryName</td>
            <td><a href="#" class=" btn btn-warning">Githubda Aç</a></td>
            <td><a href="/Project/DeleteProject/@item.ProjectID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Project/UpdateProject/@item.ProjectID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>

<a class="btn btn-info" href="/Project/CreateProject">Yeni Proje Girişi</a>

