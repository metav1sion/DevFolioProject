@model List<DevFolio.Models.TblCategory>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Kategori Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori İsmi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a class="btn btn-danger" href="/Category/DeleteCategory/@item.CategoryID">Sil</a></td>
            <td><a class="btn btn-primary" href="/Category/UpdateCategory/@item.CategoryID">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Category/CreateCategory" class="btn btn-info">Yeni Kategori Ekle</a>