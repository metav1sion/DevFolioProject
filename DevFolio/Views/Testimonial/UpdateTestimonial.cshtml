@model DevFolio.Models.TblTestimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Güncelleme Sayfası</h2>
<form method="post">
    <label>Referans ID</label>
    @Html.TextBoxFor(x=>x.TestimonialID, new {@class="form-control readonly"})
    <br/>
    <label>Referans Adı Soyadı</label>
    @Html.TextBoxFor(x=>x.NameSurname, new {@class="form-control readonly"})
    <br/>
    <label>Mevcut Görsel</label>
    <br />
    <img style="width: 30%; height: 30%;" src="@Model.ImageUrl" alt="@Model.ImageUrl" class="img-thumbnail">
    <br />

    <label for="formFileMultiple" class="form-label">Fotoğraf</label>
    <input class="form-control mb-3" type="file" name="file" id="formFileMultiple">
    <br/>
    <label>Referans Yorumu</label>
    @Html.TextBoxFor(x=>x.Description, new {@class="form-control readonly"})
    <br/>
    <button class="btn btn-success">Referansı Güncelle</button>
</form>

