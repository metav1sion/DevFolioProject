@model List<DevFolio.Models.TblService>
@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmetler Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Hizmet Adı</th>
        <th>Hizmet Açıklaması</th>
        <th>Hizmet Görseli</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServideID</td>
            <td>@item.ServiceTitle</td>
            <td>@item.Description</td>
            <td><i style="font-size: 2rem" class="@item.ServiceImgUrl"></i></td>
            <td><a href="/Service/DeleteService/@item.ServideID" class="btn btn-danger"> Sil </a></td>
            <td><a href="/Service/UpdateService/@item.ServideID" class="btn btn-success"> Güncelle </a></td>
        </tr>
    }
</table>
<br/>
<a class="btn btn-info" href="/Service/CreateService">Yeni Hizmet Ekle</a>